<%- include('./partials/header') %>
<div class="main-container">
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>User</th>
                <th>Name</th>
                <th>Description</th>
                <th>Mood</th>
                <th>Created</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% allPlaylists.forEach(function(p){%>
                <tr>
                    <td class="google-user"><img alt="avatar" src="<%= p.userAvatar %>" referrerpolicy="no-referrer" ><%= p.userName %></td>
                    <td><%= p.name  %></td>  
                    <td><%= p.description %></td>
                    <td><%= p.mood %></td>
                    <!-- ICEBOX: change to timeAgo -->
                    <td><%= p.createdAt.toLocaleDateString() %></td>
                    <td>
                    <!-- TO-DO: Use a link instead of form button -->
                    <!-- <a href="/playlists/<%= p.id %>" class="btn-link">DETAILS</a> -->
                        <form method="GET" action="/playlists/<%= p.id %>">
                            <button type="submit">DETAILS</button>
                        </form>
                    </td>
                    <%}) %>
                </tr>
            </tbody>
    </table>
</div>
</div>
<%- include('./partials/footer') %>